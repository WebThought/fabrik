	<config>
		<fields name="params">
			<fieldset name="layout" label="Layout">
				<field name="color"  class="" type="color" default=""
				label="TPL_EMERALD_COLOR_LABEL"
				description="TPL_EMERALD_COLOR_DESC" />
				<field name="logoFile" class="" type="media" default=""
				label="TPL_EMERALD_LOGO_LABEL"
				description="TPL_EMERALD_LOGO_DESC" />
				<field name="nameDisplay" type="list" default="full" label="TPL_EMERALD_DISPLAY_NAME_LABEL" description="TPL_EMERALD_DISPLAY_NAME_DESC">
					<option value="username">TPL_EMERALD_DISPLAY_NAME_USERNAME</option>
					<option value="full">TPL_EMERALD_DISPLAY_NAME_FULL_NAME</option>
					<option value="email">TPL_EMERALD_DISPLAY_NAME_EMAIL</option>
				</field>
				<field name="bootstrap_javascript" type="radio" class="btn-group" default="1" label="TPL_EMERALD_BOOTSTRAP_JS_LABEL" description="TPL_EMERALD_BOOTSTRAP_JS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="bootstrap_css" type="radio" class="btn-group" default="1" label="TPL_EMERALD_BOOTSTRAP_CSS_LABEL" description="TPL_EMERALD_BOOTSTRAP_CSS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
